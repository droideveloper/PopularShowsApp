<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  android:padding="@dimen/dp8"
  android:layout_marginStart="@dimen/dp8"
  android:layout_marginEnd="@dimen/dp8"
  android:layout_marginLeft="@dimen/dp8"
  android:layout_marginRight="@dimen/dp8"
  android:background="@drawable/ic_feed_background"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <org.fs.pshows.widget.AspectImageView
    android:id="@+id/viewImagePoster"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    support:layout_constraintBottom_toBottomOf="parent"
    tools:src="@drawable/ic_placeholder"
    tools:elevation="@dimen/dp2"
    support:image_ratio="r5_7"
    android:layout_width="@dimen/dp128"
    android:layout_height="wrap_content" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/viewButtonBookmark"
    support:layout_constraintStart_toEndOf="@+id/viewImagePoster"
    support:layout_constraintEnd_toEndOf="@+id/viewImagePoster"
    support:layout_constraintBottom_toBottomOf="@+id/viewImagePoster"
    android:layout_marginBottom="@dimen/dp8"
    android:src="@drawable/state_bookmark"
    support:fabSize="mini"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/viewTextTitle"
    support:layout_constraintStart_toEndOf="@+id/viewImagePoster"
    support:layout_constraintEnd_toEndOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dp24"
    android:textAppearance="@style/PopularShowsTextAppearance.Regular"
    android:textColor="@color/colorPrimaryText"
    android:layout_marginLeft="@dimen/dp24"
    android:layout_marginRight="@dimen/dp8"
    support:autoSizeMinTextSize="@dimen/sp12"
    support:autoSizeMaxTextSize="@dimen/sp16"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginStart="@dimen/dp24"
    android:layout_marginEnd="@dimen/dp8"
    tools:text="@string/app_name"
    support:autoSizeTextType="uniform"
    android:layout_width="@dimen/dp0"
    android:layout_height="@dimen/dp24" />

  <TextView
    android:id="@+id/viewTextGenre"
    android:layout_marginStart="@dimen/dp24"
    android:layout_marginEnd="@dimen/dp8"
    android:layout_marginLeft="@dimen/dp24"
    android:layout_marginRight="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    android:textAppearance="@style/PopularShowsTextAppearance.Regular"
    android:textColor="@color/colorSecondaryText"
    tools:text="@string/app_name"
    support:layout_constraintTop_toBottomOf="@+id/viewTextTitle"
    support:layout_constraintStart_toEndOf="@+id/viewImagePoster"
    support:layout_constraintEnd_toEndOf="parent"
    android:gravity="center_vertical"
    support:autoSizeMinTextSize="@dimen/sp8"
    support:autoSizeMaxTextSize="@dimen/sp12"
    support:autoSizeTextType="uniform"
    android:layout_width="@dimen/dp0"
    android:layout_height="@dimen/dp18" />

  <TextView
    android:id="@+id/viewTextAverage"
    support:layout_constraintStart_toEndOf="@+id/viewImagePoster"
    android:textAppearance="@style/PopularShowsTextAppearance.Regular.Small"
    android:textColor="@android:color/white"
    android:layout_marginStart="@dimen/dp24"
    android:layout_marginEnd="@dimen/dp8"
    android:layout_marginTop="@dimen/dp4"
    android:layout_marginLeft="@dimen/dp24"
    android:layout_marginRight="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    android:paddingStart="@dimen/dp12"
    android:paddingEnd="@dimen/dp12"
    android:paddingLeft="@dimen/dp12"
    android:paddingRight="@dimen/dp12"
    tools:text="8.5"
    support:layout_constraintTop_toBottomOf="@+id/viewTextGenre"
    android:background="@drawable/ic_vote_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/viewTextOverview"
    android:layout_marginTop="@dimen/dp8"
    support:layout_constraintStart_toEndOf="@+id/viewImagePoster"
    support:layout_constraintEnd_toEndOf="parent"
    support:layout_constraintBottom_toBottomOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTextAverage"
    android:layout_marginStart="@dimen/dp24"
    android:textAppearance="@style/PopularShowsTextAppearance.Light.Small"
    android:textColor="@color/colorSecondaryText"
    android:layout_marginEnd="@dimen/dp8"
    android:maxLines="5"
    android:ellipsize="end"
    android:layout_marginLeft="@dimen/dp24"
    android:layout_marginRight="@dimen/dp8"
    tools:text="@string/app_name"
    android:layout_width="@dimen/dp0"
    android:layout_height="@dimen/dp0" />

</androidx.constraintlayout.widget.ConstraintLayout>