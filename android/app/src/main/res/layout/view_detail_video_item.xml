<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <org.fs.pshows.widget.AspectImageView
    android:id="@+id/viewVideo"
    support:image_ratio="r16_9"
    tools:src="@drawable/ic_placeholder"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintEnd_toEndOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    support:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="@dimen/dp256"
    android:layout_height="wrap_content" />

  <ImageView
    support:layout_constraintStart_toStartOf="@+id/viewVideo"
    support:layout_constraintEnd_toEndOf="@+id/viewVideo"
    support:layout_constraintTop_toTopOf="@+id/viewVideo"
    support:layout_constraintBottom_toBottomOf="@+id/viewVideo"
    support:srcCompat="@drawable/ic_youtube"
    android:layout_width="@dimen/dp36"
    android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>