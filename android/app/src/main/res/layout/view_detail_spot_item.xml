<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@android:color/white"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewImageSpotLayout"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.fs.pshows.widget.AspectImageView
      android:id="@+id/viewImageBackdrop"
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintTop_toTopOf="parent"
      support:layout_constraintEnd_toEndOf="parent"
      support:layout_constraintBottom_toBottomOf="parent"
      tools:src="@drawable/ic_placeholder"
      support:image_ratio="r4_3"
      android:layout_width="@dimen/dp0"
      android:layout_height="wrap_content" />

    <org.fs.pshows.widget.OverlayView
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintTop_toTopOf="parent"
      support:layout_constraintBottom_toBottomOf="parent"
      support:layout_constraintEnd_toEndOf="parent"
      support:overlay_ratio="r4_3"
      android:layout_width="@dimen/dp0"
      android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/viewButtonBookmark"
      support:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="@dimen/dp36"
      android:layout_marginRight="@dimen/dp36"
      support:layout_constraintTop_toBottomOf="@+id/viewImagePoster"
      support:layout_constraintBottom_toBottomOf="@+id/viewImagePoster"
      android:layout_marginBottom="@dimen/dp8"
      android:src="@drawable/state_bookmark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <org.fs.pshows.widget.AspectImageView
      android:id="@+id/viewImagePoster"
      android:layout_marginStart="@dimen/dp24"
      android:layout_marginLeft="@dimen/dp24"
      tools:elevation="@dimen/dp2"
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="@dimen/dp36"
      tools:src="@drawable/ic_placeholder"
      support:image_ratio="r5_7"
      android:layout_width="@dimen/dp128"
      android:layout_height="wrap_content" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewTextSpotLayout"
    android:layout_marginTop="@dimen/dp4"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewImageSpotLayout"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/viewTextTitle"
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintTop_toTopOf="parent"
      support:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="@dimen/dp20"
      android:layout_marginEnd="@dimen/dp20"
      android:layout_width="@dimen/dp0"
      android:textAppearance="@style/PopularShowsTextAppearance.Regular.Large"
      android:textColor="@color/colorPrimaryText"
      tools:text="@string/app_name"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/viewTextGenre"
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintTop_toBottomOf="@+id/viewTextTitle"
      support:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="@dimen/dp20"
      android:layout_marginEnd="@dimen/dp20"
      android:layout_width="@dimen/dp0"
      android:textAppearance="@style/PopularShowsTextAppearance.Light.Small"
      android:layout_marginTop="@dimen/dp8"
      android:textColor="@color/colorAverageTint"
      tools:text="@string/app_name"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/viewTextOverview"
      support:layout_constraintStart_toStartOf="parent"
      support:layout_constraintTop_toBottomOf="@+id/viewTextGenre"
      support:layout_constraintEnd_toEndOf="parent"
      support:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginStart="@dimen/dp20"
      android:layout_marginEnd="@dimen/dp20"
      android:layout_width="@dimen/dp0"
      android:textAppearance="@style/PopularShowsTextAppearance.Light.Small"
      android:layout_marginTop="@dimen/dp8"
      android:textColor="@color/colorSecondaryText"
      android:layout_marginBottom="@dimen/dp20"
      tools:text="@string/app_name"
      android:layout_height="wrap_content" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>